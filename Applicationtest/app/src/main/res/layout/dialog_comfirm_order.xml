<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#797c7c"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="ยืนยันจำนวน"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/amount_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="ระบุจำนวน"
        android:inputType="number"
        android:maxLength="3"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amount_order"
        android:layout_marginTop="12dp"
        android:paddingLeft="15dp"
        android:text="ราคารวม"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#5b605f"/>

    <TextView
        android:id="@+id/text_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ce1803"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cc_btn"
        android:layout_toRightOf="@+id/text_amount"
        android:layout_toEndOf="@+id/text_amount"
        android:layout_alignTop="@+id/text_amount"
        android:text="บาท"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#5b605f"/>

    <Button
        android:id="@+id/cf_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amount_order"
        android:layout_alignStart="@+id/amount_order"
        android:layout_below="@+id/text_amount"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyleselector"
        android:text="ยืนยัน"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/cc_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cf_btn"
        android:layout_alignBottom="@+id/cf_btn"
        android:layout_alignEnd="@+id/amount_order"
        android:layout_alignRight="@+id/amount_order"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyleselector"
        android:text="ยกเลิก"
        android:textColor="#fff"
        android:textSize="18dp"/>
</RelativeLayout>