<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mint.applicationtest.Show">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtRiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:background="#797c7c"
                android:padding="15dp"
                android:text="ชื่อพันธุ์ข้าว"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/rice" />

            <TextView
                android:id="@+id/namePrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView"
                android:background="#f0f8f7"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="ราคา"
                android:textColor="#5fada5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dam_show_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="ID" />

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:background="#f0f8f7"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:text="ราคา : "
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:background="#f0f8f7"
                    android:padding="10dp"
                    android:paddingLeft="10dp"
                    android:text="บาท/ถัง "
                    android:textSize="16dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/nameRemarkable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:background="#f0f8f7"
                android:paddingLeft="10dp"
                android:text="ลักษะณะเด่น"
                android:textColor="#5fada5"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtRemarkable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:text="ลักษะณะเด่น : "
                android:textSize="16dp"
                android:background="#f0f8f7"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/nameGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:background="#f0f8f7"
                android:paddingLeft="10dp"
                android:text="ลักษณะทั่วไป"
                android:textColor="#5fada5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:background="#f0f8f7"
                android:padding="10dp"
                android:text="ลักษณะทั่วไป : "
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nameArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:background="#f0f8f7"
                android:paddingLeft="10dp"
                android:text="พื้นที่แนะนำ"
                android:textColor="#5fada5"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:background="#f0f8f7"
                android:padding="10dp"
                android:text="พื้นที่แนะนำ : "
                android:textSize="16dp" />

            <Button
                android:id="@+id/order_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonstyleselector"
                android:text="สั่งจอง"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>